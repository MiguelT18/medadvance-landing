}

const testimonials: Testimonial[] = [
  {
    rating: 5,
    quote:
      "'Desde que empezamos con MedAdvance, pasamos de tener 2 pacientes nuevos al mes a tener la agenda llena con 3 semanas de anticipación. El ROI ha sido increíble.'",
